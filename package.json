{
  "name": "switchboard.js",
  "version": "0.0.0",
  "description": "Decentralized peering without a middleman server",
  "author": "ShadowMoose",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shadowmoose/switchboard.js.git"
  },
  "keywords": [
    "webRTC",
    "matchmaking",
    "p2p",
    "peer-to-peer"
  ],
  "bugs": {
    "url": "https://github.com/shadowmoose/switchboard.js/issues"
  },
  "homepage": "https://github.com/shadowmoose/switchboard.js",
  "license": "MIT",
  "main": "build/module/index.js",
  "types": "build/module/index.d.ts",
  "browser": "build/browser/main.js",
  "scripts": {
    "start:dev": "webpack-dev-server --mode development --progress --color",
    "server": "node test/server.js",

    "build-module": "npx rimraf build/module/ && tsc --build tsconfig.module.json",
    "build-browser": "npx rimraf build/browser/ && webpack --mode production",
    "build-docs": "npx typedoc src --out docs --excludeNotExported --includeVersion --mode modules",

    "prepublishOnly": "npm run-script build-browser && npm run-script build-module"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.1",
    "@types/node": "^14.0.26",
    "@types/sha1": "^1.1.2",
    "@types/simple-peer": "^9.6.0",
    "@types/webtorrent": "^0.107.2",
    "@types/ws": "^7.2.6",
    "bittorrent-tracker": "^9.15.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.1",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7",
    "webpack": "^4.44.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "bs58": "^4.0.1",
    "isomorphic-ws": "^4.0.1",
    "sha1": "^1.1.1",
    "simple-peer": "^9.7.2",
    "torrent-discovery": "^9.3.0",
    "tweetnacl": "^1.0.3",
    "ws": "^7.3.1"
  },
  "files": [
    "build"
  ]
}
