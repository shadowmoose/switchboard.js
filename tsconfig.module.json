{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["node"],
    "target": "es6",
    "outDir": "./build/module",
    "declaration": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "removeComments": false
  },
  "exclude": [
    "node_modules",
    "./src/**/*.spec.*"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
